{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Main",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": ["."],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "ng-serve"
    },
    {
      "name": "Debug Renderer",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/#/",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
